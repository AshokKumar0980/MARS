{
  "name": "your-app",
  "version": "1.0.0",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles --passWithNoTests",
    "test:db": "TEST_WITH_DB=true jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:ci": "CI=true jest --detectOpenHandles --passWithNoTests",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "db:reset": "npm run migrate && npm run seed"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js",
      "**/__tests__/**/*.js",
      "**/*.(test|spec).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "mysql2": "^3.6.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  }
}
